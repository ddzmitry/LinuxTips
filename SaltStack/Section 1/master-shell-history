ifconfig 
shutdown now
ping google.com
ifconfig 
ping google.com
ifconfig 
shutdown now
export PS1="\h \$ "
ls
salt --help
salt '*' test.ping
salt-call service.enable salt-master --local
yum install -y salt-minion
salt-call service.enable salt-master --local
salt-call service.start salt-master --local
salt '*' test.ping
salt-key
ifconfig 
iptables -F
salt '*' test.ping
salt --help | less
salt '*' test.ping
salt 'jer*' test.ping
salt 'frank*' test.ping
salt -E 'jerr.*' test.ping
salt -L 'jerry,frank' test.ping
salt -G 'os_family:Debian' test.ping
salt -G 'os_family:RedHat' test.ping
salt 'jerry' grains.items
salt --help | less
salt '*' test.ping
salt 'jer*' test.ping
salt 'frank*' test.ping
salt -E 'jerr.*' test.ping
salt -L 'jerry,frank' test.ping
salt -G 'os_family:Debian' test.ping
salt 'jerry' grains.items
salt -G 'virtual:VirtualBox' test.ping
salt -G 'virtual:physical' test.ping
salt -C 'jer* and G@os_family:Debian not G@virtual:physical' test.ping
vi /etc/salt/master
salt -N common test.ping
salt 'jerry' grains.setval roles '[web,caching]'
salt -G 'roles:web' test.ping
export PS1="\h \$ "
cd
python -c 'import salt; print salt.__file__'
export PS1="\h \$ "
