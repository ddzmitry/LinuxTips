
> Get Salt from RPM
* yum install https://repo.saltstack.com/yum/redhat/salt-repo-2018.3-1.el7.noarch.rpm
* yum install salt-master salt-api
* systemctl start salt-master



ls /etc/salt/
vi /etc/salt/master
ip 
ip addr
salt-key -F
salt-key --help
service salt-master start
salt-key -F
salt-key 
ifconf
ip addrs
ip addr
salt-key 
pgrep -luntp
pgrep -lntp
netstat -luntp
less /var/log/salt/master 
less /etc/salt/master
ip addr
yum install net-tools -y
netstat -luntp
iptables -L
iptables -F
salt-key 
less /etc/salt/pki/master/master.p*
salt-key --help | less
salt-key 
salt-key -a jerry
salt-key -A
salt-key -F
salt-key --help | less
salt-key --gen-keys frank
ls
mv frank.pub /etc/salt/pki/master/minions/frank
salt-key 
salt-key -d frank
export PS1="\h \$ "
ifconfig 
ls /etc/networks
less /etc/networks
ifconfig 
grep -rni enp0s3 /etc/
less /etc/sysconfig/network-scripts/ifcfg-enp0s3 
shutdown now
